    rows: 2
    Button:
        text: "A"
        size_hint: None, .1
        width: "60dp"
    BoxLayoutExample
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, .1
        width: "60dp"
    Button:
        text: "E"
    Button:
