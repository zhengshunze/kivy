<AnchorLayoutExample>
    # right, left , center
    anchor_x: 'center'
    # bottom, top ,center
    anchor_y: 'top'
    BoxLayout:
        size_hint: .1, .1
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: "A"
        Button:
            text: "B"


<BoxLayoutExample>
    orientation: 'horizontal'
    Button:
        text: "A"
        size: "20dp","60dp"
#       width: "10dp"
#       height: "60dp"
        size_hint: .5, .5
#       x, center_x, right #horizontal
#       y, center_y, top   #vertical
        pos_hint:{ "center_y": .5}
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"

    Label:
        text: "C"

<MainWidget>
    Button:
        text: "Hello"
        size: '50dp','40dp'
        pos: '100dp','200dp'
        color: 1,0,0,1
    Label:
        text: "Hi!"
        size: '100dp','80dp'
        pos: '200dp','300dp'
        color: 1,0,0,1


